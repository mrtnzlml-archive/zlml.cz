{form form}
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				{label username /}
				{input username, class => "form-control"}
			</div>
		</div>
		<div n:ifset="$form['role']" class="col-lg-6">
			<div class="form-group">
				{label role /}
				{input role, class => "form-control"}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6">
			<div class="form-group">
				{label password /}
				{input password, class => "form-control"}
			</div>
		</div>
		<div class="col-lg-6">
			&nbsp;
		</div>
	</div>
	{input save, class => "btn btn-primary form-control"}
{/form}
