use Tester\\\\Dumper;
use Tester\\\\Runner\\\\Runner;

/** @var \\\\Tester\\\\Runner\\\\Runner $runner */
$runner-&gt;outputHandlers = []; // delete native output handlers
$runner-&gt;outputHandlers[] = new class ($runner) extends \\\\Tester\\\\Runner\\\\Output\\\\ConsolePrinter
